{
  "name": "por-quinho",
  "version": "0.0.1",
  "type": "module",
  "description": "De pouco em pouco se enche o porquinho - Aplicação moderna de gestão financeira pessoal",
  "scripts": {
    "dev": "vite",
    "build": "npm run test:pre-build && vite build",
    "build:unsafe": "vite build",
    "preview": "vite preview",
    "prod:build:test": "npm run build && vite preview",
    "test": "vitest",
    "test:pre-build": "npm run test:passing && npm run test:e2e:working",
    "test:unit": "vitest run src/",
    "test:passing": "vitest run src/test/unit/recurrence.test.ts src/test/unit/toggleStatus.test.ts src/test/unit/monthCollapse.test.ts",
    "test:e2e:working": "playwright test tests/e2e/working-flows.spec.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e tests/e2e/working-flows.spec.ts",
    "test:complete": "echo '🧪 Running complete test suite...' && npm run test && echo '✅ Unit tests complete' && npm run test:e2e tests/e2e/working-flows.spec.ts && echo '🎉 All tests complete!'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@supabase/supabase-js": "^2.57.4",
    "@vee-validate/zod": "^4.15.1",
    "chart.js": "^4.3.0",
    "pinia": "^3.0.3",
    "vee-validate": "^4.15.1",
    "vue": "^3.3.4",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.2.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.14",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^3.2.4",
    "vue-tsc": "^1.2.0"
  }
}